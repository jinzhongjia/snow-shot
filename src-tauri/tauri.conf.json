{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Snow Shot",
	"mainBinaryName": "snowshot",
	"version": "0.7.5-beta",
	"identifier": "com.chao.snowshot",
	"build": {
		"removeUnusedCommands": true,
		"frontendDist": "../dist",
		"devUrl": "http://localhost:8083",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"label": "main",
				"fullscreen": false,
				"height": 632,
				"maximizable": false,
				"title": "Snow Shot",
				"width": 1024,
				"center": true,
				"decorations": true,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"trafficLightPosition": {
					"x": 16,
					"y": 16
				},
				"visible": false,
				"backgroundThrottling": "disabled",
				"url": "/"
			}
		],
		"macOSPrivateApi": true,
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": ["*", "**"]
			}
		}
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGODlCOTdFOUU2RjZDMQpSV1RCOXVicGw1djRCZE4waUVoR2lCU2xxYWlvMUhDUTFTR2VXZmFyWmVZMXBxRy9vV1BHQXBBdwo=",
			"endpoints": [
				"https://github.com/mg-chao/snow-shot/releases/latest/download/latest.json"
			],
			"windows": {
				"installMode": "passive"
			}
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"category": "Utility",
		"shortDescription": "Snow Shot",
		"longDescription": "Simple and elegant screenshot tool",
		"macOS": {
			"minimumSystemVersion": "12.3.0"
		},
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"webviewInstallMode": {
				"silent": true,
				"type": "embedBootstrapper"
			},
			"nsis": {
				"template": "./build-configs/installer.nsi",
				"displayLanguageSelector": true,
				"installerIcon": "icons/icon.ico",
				"installMode": "perMachine",
				"languages": ["SimpChinese", "TradChinese", "English"]
			}
		},
		"licenseFile": "../LICENSE-Commercial",
		"targets": ["nsis", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": {
			"app-icons/": "app-icons/"
		}
	}
}
